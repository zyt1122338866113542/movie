/* pages/comment/comment.wxss */
/* 1.背景图片 模糊*/
.detail-container{
  height: 400rpx;
  opacity: .9;
  filter: blur(40rpx);  /* 高斯模糊滤镜*/
}
/* 2.添加遮罩层 */
.detail-mask{
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;   /*显示模糊图片底层*/
  width: 100%;
  height: 400rpx;
  background: #333;
}
/* 3.电影的详情信息 */
.detail-info{
  position: absolute;
  top: 0;
  left: 0;
  height: 400rpx;
  width: 100%;
  padding: 20rpx;
  display: flex;    /*弹性布局*/
}
/* 4.左侧图片*/
.detail-img{
  width: 280rpx;
  height: 90%;
  margin-right: 24rpx;   /*右侧文字间距*/
}
/* 5.右侧文字区域介绍 */
.detail{
  line-height: 60rpx;
}
.detail view{
  color: #fff;
  font-size: 24rpx;
}
/* 6.预览图片 */
.comment-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}